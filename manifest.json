{
  "manifest_version": 3,
  "name": "Kindle Review Meter",
  "version": "1.0.0",
  "description": "Amazon書籍のレビュー進捗を可視化し、X/Twitter向けの美しい画像として共有できるChrome拡張機能",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "scripting",
    "clipboardWrite",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "https://*.amazon.co.jp/*",
    "https://*.amazon.com/*",
    "https://*.media-amazon.com/*",
    "https://*.images-amazon.com/*",
    "https://*.ssl-images-amazon.com/*",
    "https://api.allorigins.win/*",
    "https://corsproxy.io/*",
    "https://cors-anywhere.herokuapp.com/*",
    "https://thingproxy.freeboard.io/*",
    "https://api.codetabs.com/*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Kindle Review Meter - レビュー進捗を可視化"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*intent/tweet*",
        "https://x.com/*intent/tweet*",
        "https://twitter.com/compose*",
        "https://x.com/compose*",
        "https://twitter.com/i/flow/tweet*",
        "https://x.com/i/flow/tweet*",
        "https://twitter.com/i/flow/post*",
        "https://x.com/i/flow/post*",
        "https://twitter.com/i/flow/compose*",
        "https://x.com/i/flow/compose*",
        "https://mobile.twitter.com/intent/tweet*",
        "https://mobile.twitter.com/compose*",
        "https://mobile.x.com/compose*"
      ],
      "js": ["content-scripts/x-tweet-auto-attach.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "author": "KindleReviewMeter Development Team",
  
  "homepage_url": "https://github.com/makionakatsu/KindleReviewMeter"
}
