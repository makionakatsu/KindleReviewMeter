{
  "manifest_version": 3,
  "name": "Kindle Review Meter",
  "version": "1.0.0",
  "description": "Amazon書籍のレビュー進捗を可視化し、X/Twitter向けの美しい画像として共有できるChrome拡張機能",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.amazon.co.jp/*",
    "https://*.amazon.com/*",
    "https://api.allorigins.win/*",
    "https://corsproxy.io/*",
    "https://cors-anywhere.herokuapp.com/*",
    "https://thingproxy.freeboard.io/*",
    "https://api.codetabs.com/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Kindle Review Meter - レビュー進捗を可視化"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "author": "KindleReviewMeter Development Team",
  
  "homepage_url": "https://github.com/makionakatsu/KindleReviewMeter"
}